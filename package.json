{
  "name": "randomcoords",
  "version": "1.0.1",
  "description": "The Node.js client for the RandomCoords API to fetch random geographic coordinates worldwide.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.js"
  },
  "repository": "TalhaAwan/randomcoords-node",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "npm run format:check && jest",
    "prepare": "npm run build"
  },
  "keywords": [
    "api",
    "random",
    "geographic",
    "location",
    "coordinates",
    "latitude",
    "longitude",
    "world",
    "regions",
    "countries"
  ],
  "author": "Talha Awan",
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.17",
    "dotenv": "^16.5.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  }
}
